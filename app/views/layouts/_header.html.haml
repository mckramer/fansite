.fill
  .container
    =link_to t(:site_title), root_path, { class: 'brand'}
    %ul.nav
      %li= link_to t("nav.about"), about_path
      %li.dropdown{ 'data-dropdown' => 'dropdown' }
        %a.dropdown-toggle{:href=>"#"} Updates
        %ul.dropdown-menu
          %li= link_to 'Posts', posts_path
          %li= link_to 'Concerts', "#{events_path}/type/concert"
          %li= link_to 'Events', events_path
          %li.divider
          %li= link_to 'All updates', updates_path
      %li.dropdown{ 'data-dropdown' => 'dropdown' }
        = link_to 'Media', '/media', class: 'dropdown-toggle'
        %ul.dropdown-menu
          %li= link_to "Music ♫<br>&nbsp;&nbsp;& music videos".html_safe, '/media/type/music'
          %li= link_to 'Videos', '/media/type/video'
          %li= link_to 'Images', '/media/type/image'
          %li.divider
          %li= link_to 'All media', media_path
      %li= link_to t("nav.contact"), contact_path
      - unless current_user
        %li.dropdown{ 'data-dropdown' => 'dropdown' }
          = link_to image_tag('icons/media/16/language.png'), '/locales', class: 'dropdown-toggle', style: "height: 13px; vertical-align: middle;"
          %ul.dropdown-menu
            %li= link_to 'English', '/?locale=en'
            %li= link_to 'Español', '/?locale=es'
            %li.divider
            %li= link_to 'All locales', '/locales'
    - if current_user        
      %ul.nav.secondary-nav
        %li.dropdown{ 'data-dropdown' => 'dropdown' }
          %a.dropdown-toggle{:href=>"#"}
            = gravatar_for current_user, 16, {:style=>"vertical-align:middle;"}
            &nbsp;
            = current_user.username
          %ul.dropdown-menu
            %li= link_to 'Profile', '/profile'
            %li= link_to 'Profile', '/profile'
            %li.divider
            %li= link_to 'Logout', logout_path
    - else
      .pull-right{ style: "margin-top: 7px;" }
        = link_to image_tag("authentications/sign-in-with-twitter-l.png"), '/auth/twitter'