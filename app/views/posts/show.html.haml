- content_for :page_title, t('.title')
- content_for :page_tagline, t('.subtitle')
%p
  %b Title:
  = @post.title
%p
  %b Subtitle:
  = @post.subtitle
%p
  %b Body:
  = @post.body
%p
  %b User:
  = link_to @post.user.username, @post.user
.links.well
  = link_to 'Edit', edit_post_path(@post), class: "btn"
  = link_to 'Back', posts_path, class: "btn"
