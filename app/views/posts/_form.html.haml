= form_for(@post, html: { class: 'form-horizontal' } ) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    .field.control-group
      = f.label :title, class: 'control-label'
      .controls= f.text_field :title
    .field.control-group
      = f.label :subtitle, class: 'control-label'
      .controls= f.text_field :subtitle
    .field.control-group
      = f.label :body, class: 'control-label'
      .controls= f.text_area :body
    .field.control-group
      = f.label :teaser, class: 'control-label'
      .controls= f.text_field :teaser
    .field.control-group
      = f.label :user_id, class: 'control-label'
      .controls= f.collection_select :user_id, @users, :id, :username
  .actions.well
    = f.submit class: "btn btn-primary btn-large"
    - unless @post.new_record?
      = link_to 'Nevermind, back to the post', @post, class: 'btn btn-large'
    - else
      = link_to 'Nevermind, back to viewing the posts', posts_path, class: 'btn btn-large'