      .author
        %span.user= link_to '@user', '/profile/user'
        posted on
        %span.date Feb 3rd
        at
        %span.time 8:07pm
  %hr
  .comment-form
    %form.well.form-inline
      %textarea{ placeholder: "What do you want to say?", style: "width: 100%;" }
      %div{ style: "float: right; margin-top: 5px;" }
        %a.btn{ rel: "tooltip", title: "Add the comment" }
          %i.icon-comment
          Add the comment
      .clear