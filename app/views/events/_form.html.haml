= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :teaser
    = f.text_field :teaser
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :category
    = f.text_field :category
  .actions.well
    = f.submit, class: 'btn primary'